<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityAddEmpleado">

    <TextView
        android:id="@+id/empleado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:text="Empleado"
        android:textAlignment="center"
        android:textColor="#151414"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="25dp" />

    <ImageButton
        android:id="@+id/imgbtnmenu"
        android:layout_width="46dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="631dp"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtfechaI"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Fecha de ingreso"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtfechaingresoemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:hint="Fecha ingreso" />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Nombre"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtnombreemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Nombre" />

            <TextView
                android:id="@+id/txtapp"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Apellido paterno"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtApPaternoemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Apellido paterno" />

            <TextView
                android:id="@+id/txtapM"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Apellido materno"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtApMaternoemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Apellido materno" />

            <TextView
                android:id="@+id/txtcalle"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Calle"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtcalleemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Calle" />

            <TextView
                android:id="@+id/txtNInt"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Número interior"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtNoIntemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="14dp"
                android:ems="10"
                android:hint="Número interior"
                android:inputType="number" />

            <TextView
                android:id="@+id/txtNExt"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Número exterior"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtNoExtemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="14dp"
                android:ems="10"
                android:hint="Número exterior"
                android:inputType="number" />

            <TextView
                android:id="@+id/txtcp"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Código postal"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtCPemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Código Postal"
                android:inputType="number" />

            <TextView
                android:id="@+id/txtcol"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Colonia"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtcoloniaemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Colonia" />

            <TextView
                android:id="@+id/txtmun"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Municipio"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtmunicipioemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Municipio" />

            <TextView
                android:id="@+id/txtestado"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Estado"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtestadoemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Estado" />

            <TextView
                android:id="@+id/txtcel"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Número telefonico"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtnumeroemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:ems="10"
                android:hint="Número telefonico"
                android:inputType="number" />

            <TextView
                android:id="@+id/txtemail"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Email"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtEmailemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/txtsexo"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Sexo"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtsexoemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Sexo" />

            <TextView
                android:id="@+id/txtedoc"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Estado civil"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtedoCivilemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Estado civil" />

            <TextView
                android:id="@+id/txtfechan"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Fecha de nacimiento"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtfechanacemp"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:hint="Fecha nacimiento" />

            <TextView
                android:id="@+id/txtarea"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Área"
                android:textColor="#252424"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtareaemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Área" />

            <TextView
                android:id="@+id/txtvacante"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="60dp"
                android:text="Vacante"
                android:textColor="#252424"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/txtpuestoemp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="60dp"
                android:hint="Vacante" />

            <TextView
                android:id="@+id/txtlistadoc"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:layout_marginStart="60dp"
                android:gravity="center"
                android:text="Lista de documentos"
                android:textColor="#252424"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtin"
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:layout_marginStart="60dp"
                android:gravity="center"
                android:text="Clic en los siguientes link para visualizar el documento."
                android:textColor="#252424"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/listDocEmpleado"
                android:layout_width="wrap_content"
                android:layout_height="991dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>